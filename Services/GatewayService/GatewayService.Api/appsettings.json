{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "ProductBrandRoute": {
        "ClusterId": "productBrandId",
        "Match": { "Path": "/ProductBrand/{**catch-all}" }

      },
      "ProductRoute": {
        "ClusterId": "productId",
        "Match": { "Path": "/Product/{**catch-all}" }
      },
      "CategoryRoute": {
        "ClusterId": "categoryId",
        "Match": { "Path": "/Category/{**catch-all}" }
      },
      "ProductDetailRoute": {
        "ClusterId": "productDetailId",
        "Match": { "Path": "/ProductDetail/{**catch-all}" }
      },
      "ProductImageRoute": {
        "ClusterId": "ProductImageId",
        "Match": { "Path": "/ProductImage/{**catch-all}" }
      },
      "RoleRoute": {
        "ClusterId": "roleId",
        "Match": { "Path": "/Role/{**catch-all}" }
      },
      "PermissionRoute": {
        "ClusterId": "permissoinId",
        "Match": { "Path": "/Permission/{**catch-all}" }
      },
      "OrderRoute": {
        "ClusterId": "orderId",
        "Match": { "Path": "/Order/{**catch-all}" }
      },
      "AccountRoute": {
        "ClusterId": "accountId",
        "Match": { "Path": "/Account/{**catch-all}" }
      }
    },
    "Clusters": {
      "productBrandId": {
        "Destinations": {
          "ProductBrandDesti": { "Address": "https://localhost:7104" }
        }
      },
      "productId": {
        "Destinations": {
          "ProductDesti": { "Address": "https://localhost:7104" }
        }
      },
      "categoryId": {
        "Destinations": {
          "CategoryDesti": { "Address": "https://localhost:7104" }
        }
      },
      "productDetailId": {
        "Destinations": {
          "ProductDetailDesti": { "Address": "https://localhost:7104" }
        }
      },
      "ProductImageId": {
        "Destinations": {
          "ProductImageDesti": { "Address": "https://localhost:7104" }
        }
      },
      "roleId": {
        "Destinations": {
          "RoleDesti": { "Address": "https://localhost:7276" }
        }
      },
      "permissoinId": {
        "Destinations": {
          "PermissionDesti": { "Address": "https://localhost:7276" }
        }
      },
      "orderId": {
        "Destinations": {
          "OrderDesti": { "Address": "https://localhost:7135" }
        }
      },
      "accountId": {
        "Destinations": {
          "AccountDesti": { "Address": "https://localhost:7276" }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
